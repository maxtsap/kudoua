<% content_for :head_libraries, jquery_include_tags(:jquery_ui => false) %>
<% content_for :head, javascript_include_tag('application') %>

<%= javascript_include_tag 'galleria-min' %>

<script>
  Galleria.loadTheme('galleria/themes/kudohome/galleria.kudohome.js');
</script>

<div id="home_gallery">

  <div id="gallery">
    <% Image.all.each do |i| %>
      <%= image_fu i %>
    <% end %>
  </div>
  <div class="clear"></div>

</div>

<script>
  $('#gallery').galleria({
    width:600,
    height:500,
    thumbnails: 0,
    autoplay: true,
    showInfo: false
  });
</script>

<%#= render :partial => "/shared/content_page" %>


<div id="home_news">
  <%= raw @page[:body] if @news_items.offset == 0 %>

  <% if @news_items.any? %>
    <% @news_items.each do |item| %>
      <article>
        <span class="dot"></span><h3><%= l(item.publish_date, :format => :short) %> <%= link_to item.title_with_new, news_item_url(item) %></h3>


        <%= truncate item.body, :length => 400,
                     :omission => " ... #{link_to t('.read_more'), news_item_url(item), :class => :read_more}",
                     :preserve_html_tags => true %>
        <div class="clear"></div>
      </article>
    <% end %>

    <%= will_paginate(@news_items) %>
  <% else %>
    <p><em><%= t('.no_items_yet') %></em></p>
  <% end %>
</div>
