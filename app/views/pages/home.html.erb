<%= javascript_include_tag 'galleria' %>

<script>
  Galleria.loadTheme('galleria/themes/kudohome/galleria.kudohome.js');
</script>

<div id="home_gallery">

  <div id="gallery">
    <% Image.used_on_main.all.each do |i| %>
      <%= image_fu i %>
    <% end %>
  </div>
  <div class="clear"></div>

</div>

<script>
  $('#gallery').galleria({
    width:600,
    height:500,
    thumbnails:0,
    autoplay:true,
    showInfo:false
  });
</script>

<%#= render :partial => "/shared/content_page" %>
<div class="side_body">
  <%= raw @page.content_for(:side_body) %>
</div>

<div class="clear"></div>
<div id="body_content">
  <%= raw @page.content_for(:body) %>
</div>



<ul id="middle_content">
  <li id="news" class="<%= 'full_size' if @banners.blank? %>">
    <div id="home_news">

      <% if @news_items.any? %>
        <% @news_items.each do |item| %>
          <article>
            <span class="dot"></span>

            <h3><%= l(item.publish_date, :format => :short) %> <%= link_to item.title_with_new, news_item_url(item) %></h3>


            <%= truncate item.body, :length => 400,
                         :omission => " ... #{link_to t('.read_more'), news_item_url(item), :class => :read_more}",
                         :preserve_html_tags => true %>
            <div class="clear"></div>
          </article>
        <% end %>

        <%= will_paginate(@news_items) %>
      <% else %>
        <p><em><%= t('.no_items_yet') %></em></p>
      <% end %>
    </div>
  </li>
  <% unless @banners.blank? %>
    <li id="banners">
      <ul id="banner_items">
        <% @banners.each do |banner| %>
          <li>
            <%= link_to((image_fu banner.image, '190x190'), banner.link) %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
