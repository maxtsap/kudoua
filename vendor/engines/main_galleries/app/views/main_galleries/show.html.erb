<% content_for :body_content_title do %>
  <%= @main_gallery.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @main_gallery.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="main_galleries">
      <% @main_galleries.each do |main_gallery| %>
        <li>
          <%= link_to main_gallery.title, main_gallery_path(main_gallery) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
