<ul>
  <% if Admin::MainGalleriesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_main_galleries_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_main_gallery_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::MainGalleriesController.sortable? and MainGallery.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Main Galleries"),
                 admin_main_galleries_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Main Galleries"),
                 admin_main_galleries_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>